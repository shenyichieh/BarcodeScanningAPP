<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProductInfoActivity">

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="48dip"
        android:layout_height="38dip"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton1"
        android:adjustViewBounds="true"
		android:background="@drawable/down" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_alignTop="@+id/ImageButton01"
        android:layout_toRightOf="@+id/ImageButton01"
        android:adjustViewBounds="true"
        android:background="@drawable/heart"
        android:layout_width="48dip"
        android:layout_height="38dip" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_alignTop="@+id/ImageButton02"
        android:layout_toRightOf="@+id/ImageButton02"
        android:adjustViewBounds="true"
        android:background="@drawable/cart"
        android:layout_width="48dip"
        android:layout_height="38dip"/>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_alignLeft="@+id/productName"
        android:layout_below="@+id/productName"
        android:layout_marginTop="21dp"
        android:adjustViewBounds="true"
        android:background="@drawable/up"
        android:layout_width="48dip"
        android:layout_height="38dip"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageButton03"
        android:layout_toRightOf="@+id/ImageButton03"
        android:adjustViewBounds="true"
        android:maxHeight="128dp"
        android:maxWidth="128dp"
        android:gravity="right"
        android:src="@drawable/product1" />

    <ImageButton
        android:id="@+id/star4"
        android:layout_width="34dip"
        android:layout_height="28dip"
        android:layout_below="@+id/ImageButton02"
        android:layout_toRightOf="@+id/star3"
        android:adjustViewBounds="true"
        android:background="@drawable/star2" />

    <ImageButton
        android:id="@+id/star5"
        android:layout_width="34dip"
        android:layout_height="28dip"
        android:layout_alignTop="@+id/star4"
        android:layout_toRightOf="@+id/star4"
        android:adjustViewBounds="true"
        android:background="@drawable/star2" />

    <ImageButton
        android:id="@+id/star1"
        android:layout_width="34dip"
        android:layout_height="28dip"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignTop="@+id/star3"
        android:adjustViewBounds="true"
        android:background="@drawable/star1" />

    <ImageButton
        android:id="@+id/star3"
        android:layout_width="34dip"
        android:layout_height="28dip"
        android:layout_alignTop="@+id/star4"
        android:layout_toRightOf="@+id/star2"
        android:adjustViewBounds="true"
        android:background="@drawable/star1" />

    <ImageButton
        android:id="@+id/star2"
        android:layout_width="34dip"
        android:layout_height="28dip"
        android:layout_alignTop="@+id/star1"
        android:layout_toRightOf="@+id/star1"
        android:adjustViewBounds="true"
        android:background="@drawable/star1" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/star1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="57dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/productchemicals" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
